./xmlchange --id LND2GLC_SMAPNAME --val "$BASEDIR/CESM2.0_SETUP/CPL/CLM-CISM/map_fv0.9x1.25_TO_4km_blin.190515.nc"
./xmlchange --id  GLC2LND_FMAPNAME --val "$BASEDIR/CESM2.0_SETUP/CPL/CLM-CISM/map_4km_TO_fv0.9x1.25_aave.190515.nc"
./xmlchange --id GLC2LND_SMAPNAME --val  "$BASEDIR/CESM2.0_SETUP/CPL/CLM-CISM/map_4km_TO_fv0.9x1.25_aave.190515.nc"


# RTM-OCN (0.5deg to gx1v7)
./xmlchange --id ROF2OCN_LIQ_RMAPNAME --val  "$BASEDIR/CESM2.0_SETUP/CPL/RTM-OCN/RMAP/map_r0.5_gx1v7_190426.liq.rmap.nc"
