./xmlchange --id ROF2OCN_FMAPNAME --val "$BASEDIR/CESM2.0_SETUP/CPL/RTM-OCN/FMAP/map_r05deg_TO_gx1v7-21ka_aave.fmap.190427.nc"

#RTM-CLM: (0.5deg to 1deg)


./xmlchange --id LND2ROF_FMAPNAME --val  "$BASEDIR/CESM2.0_SETUP/CPL/RTM-CLM/AUG/map_fv0.9x1.25_TO_r05_aave.190802.nc"
