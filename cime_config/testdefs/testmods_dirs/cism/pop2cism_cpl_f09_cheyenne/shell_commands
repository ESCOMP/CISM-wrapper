# NOTE: Assumes a Bourne shell will be used
BASEDIR=/glade/work/sbradley/
RUNDIR=`./xmlquery --value RUNDIR`

./xmlchange OCN_C2_GLC=TRUE

## coupler/mapping files

# New POP to CISM files

./xmlchange OCN2GLC_FMAPNAME="$BASEDIR/CESM2.0_SETUP/CPL/OCN-CISM/wgt_gx1v7_TO_nh4km_aavg.nc"
./xmlchange OCN2GLC_SMAPNAME=$BASEDIR/CESM2.0_SETUP/CPL/OCN-CISM/BLIN/map_gx1v7_TO_nh4km_blin_1.nc
./xmlchange OCN2GLC_10_SMAPNAME=$BASEDIR/CESM2.0_SETUP/CPL/OCN-CISM/BLIN/map_gx1v7_TO_nh4km_blin_2.nc
./xmlchange OCN2GLC_19_SMAPNAME=$BASEDIR/CESM2.0_SETUP/CPL/OCN-CISM/BLIN/map_gx1v7_TO_nh4km_blin_3.nc
./xmlchange OCN2GLC_26_SMAPNAME=$BASEDIR/CESM2.0_SETUP/CPL/OCN-CISM/BLIN/map_gx1v7_TO_nh4km_blin_4.nc
./xmlchange OCN2GLC_30_SMAPNAME=$BASEDIR/CESM2.0_SETUP/CPL/OCN-CISM/BLIN/map_gx1v7_TO_nh4km_blin_5.nc
./xmlchange OCN2GLC_33_SMAPNAME=$BASEDIR/CESM2.0_SETUP/CPL/OCN-CISM/BLIN/map_gx1v7_TO_nh4km_blin_6.nc
./xmlchange OCN2GLC_35_SMAPNAME=$BASEDIR/CESM2.0_SETUP/CPL/OCN-CISM/BLIN/map_gx1v7_TO_nh4km_blin_7.nc

# These aren't actually used
./xmlchange GLC2OCN_SMAPNAME=$BASEDIR/CESM2.0_SETUP/CPL/CISM-OCN/wgt_nh4km_TO_gx1v7_aavg.nc

# CLM-CISM

### domain files
./xmlchange --id ATM_DOMAIN_PATH --val "$BASEDIR/CESM2.0_SETUP/CPL/DOMAIN/"
./xmlchange --id LND_DOMAIN_PATH --val "$BASEDIR/CESM2.0_SETUP/CPL/DOMAIN/"
./xmlchange --id OCN_DOMAIN_PATH --val "$BASEDIR/CESM2.0_SETUP/CPL/DOMAIN/"
./xmlchange --id ICE_DOMAIN_PATH --val "$BASEDIR/CESM2.0_SETUP/CPL/DOMAIN/"
./xmlchange --id ATM_DOMAIN_FILE --val "domain.lnd.fv0.9x1.25_gx1v7.190426.nc"
./xmlchange --id LND_DOMAIN_FILE --val "domain.lnd.fv0.9x1.25_gx1v7.190426.nc" 
./xmlchange --id OCN_DOMAIN_FILE --val "domain.ocn.gx1v7.190426.nc"
./xmlchange --id ICE_DOMAIN_FILE --val "domain.ocn.gx1v7.190426.nc"


## coupler/mapping files


############## namelist settings


# CLM-CISM (1deg to 4km)
